<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="logs" />

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %date %highlight(%-5level) [%-32.32thread] %cyan(%-32.32logger{32}) %green(->) %msg%n %red(%throwable)
            </Pattern>
        </layout>
    </appender>

    <appender name="File"
              class="ch.qos.logback.core.FileAppender">
        <param name="Append" value="false" />
        <file>${LOGS}/default.log</file>
        <withJansi>true</withJansi>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %date %highlight(%-5level) [%-32.32thread] %cyan(%-32.32logger{32}) %green(->) %msg%n %red(%throwable)
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>${LOGS}/old/default.%i.log</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>10</MaxIndex>
        </rollingPolicy>
            <triggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <maxFileSize>100MB</maxFileSize>
            </triggeringPolicy>
    </appender>

    <logger name="idk.bluecross.proxyd" level="DEBUG" additivity="false">
        <appender-ref ref="File" />
    </logger>

    <root level="INFO">
        <appender-ref ref="Console" />
    </root>

</configuration>
